<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal" >

    <jhhmoviles.com.tictactoe.BoardView
        android:id="@+id/board"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView android:id="@+id/information"    	           	android:layout_width="fill_parent"
            android:layout_height="wrap_content"    			android:text="info"
            android:gravity="center_horizontal" 		      android:layout_marginTop="20dp"
            android:textSize="20dp" />
        <TextView android:id="@+id/score"    	           	android:layout_width="fill_parent"
            android:layout_height="wrap_content"    			android:text="Human: 0   Ties: 0  Android: 0"
            android:gravity="center_horizontal" 		      android:layout_marginTop="20dp"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>
